<style>
    .navbar-custom {
        background-color: #2c3e50;
        border-bottom: 2px solid #34495e;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        /* Space between logo and menu */
        align-items: center;
    }

    .topnav-menu {
        display: flex;
        justify-content: flex-end;
        /* Align items to the right */
        align-items: center;
        margin-left: auto;
        /* Push the list to the right */
    }

    .topnav-menu>li {
        margin-left: 20px;
    }

    .notification-icon {
        font-size: 22px;
        color: #ecf0f1;
        cursor: pointer;
        margin-right: 20px;
        transition: color 0.3s ease;
    }

    .notification-icon:hover {
        color: #f39c12;
    }

    .dropdown-menu {
        background-color: #34495e;
        color: #ecf0f1;
        padding: 15px;
        border-radius: 8px;

    }

    .dropdown-item {
        color: #ecf0f1;
        padding: 10px;
        transition: background-color 0.3s ease;
    }

    .dropdown-item:hover {
        background-color: #16a085;
    }

    .nav-user img {
        border-radius: 50%;
        height: 40px;
        width: 40px;
        margin-right: 10px;
    }

    .pro-user-name {
        color: #ecf0f1;
        font-weight: 600;
    }

    .text-overflow {
        color: white;
    }
</style>

<div class="navbar-custom">
    <!-- LOGO -->
    <div class="">
        <a href="https://telegram-bot-by30.onrender.com/admin/dashboard" class="">
            <span class="logo-sm" style="margin-left: 50px;">
                <img src="<%- process.env.BACKEND_URL %>/assets/images/logonew.png" alt="" height="100px">
            </span>
        </a>

    </div>

    <ul class="list-unstyled topnav-menu mb-0">
        <!-- Notification icon -->
        <li class="dropdown notification-list topbar-dropdown">
            <a class="nav-link dropdown-toggle waves-effect waves-light" data-bs-toggle="dropdown" href="#"
                role="button" aria-haspopup="false" aria-expanded="false">
                <i class="fe-bell notification-icon"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-end notification-dropdown">
                <h6 class="text-overflow m-0">Notifications</h6>
                <a href="#" class="dropdown-item notify-item">
                    <i class="fe-info"></i>
                    <span>New message received</span>
                </a>
                <a href="#" class="dropdown-item notify-item">
                    <i class="fe-check-circle"></i>
                    <span>Task completed</span>
                </a>
            </div>
        </li>

        <!-- Admin dropdown -->
        <li class="dropdown notification-list topbar-dropdown">
            <a class="nav-link nav-user me-0 waves-effect waves-light" data-bs-toggle="dropdown" href="#" role="button"
                aria-haspopup="false" aria-expanded="false">
                <img src="<%- process.env.BACKEND_URL %>/assets/images/users/user-1.jpg" alt="user-image"
                    class="rounded-circle">
                <span class="pro-user-name ms-1">
                    Admin <i class="mdi mdi-chevron-down"></i>
                </span>
            </a>
            <div class="dropdown-menu dropdown-menu-end profile-dropdown">
                <div class="dropdown-header noti-title">
                    <h6 class="text-overflow m-0">Welcome!</h6>
                </div>
                <a href="me" class="dropdown-item notify-item">
                    <i class="fe-user"></i>
                    <span>My Account</span>
                </a>
                <a href="logout" class="dropdown-item notify-item">
                    <i class="fe-log-out"></i>
                    <span>Logout</span>
                </a>
            </div>
        </li>
    </ul>

    <div class="clearfix"></div>
</div>
