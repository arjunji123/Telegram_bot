<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4>User History - <%= userId %></h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Quest Name</th>
                            <th>Quest Type</th>
                            <th>Activity</th>
                            <th>Coins</th>
                            <th>Pending Coins</th> <!-- Added Pending Coins column -->
                            <th>Title</th> <!-- Added Title column -->
                            <th>Screenshot</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let serialNumber = 1; %>
                        <% userHistory.forEach(entry => { %>
                            <tr>
                                <td><%= serialNumber++ %></td>
                                <td><%= entry.quest_name || 'Unknown Task' %></td>
                                <td><%= entry.quest_type || 'N/A' %></td>
                                <td><%= entry.activity || 'N/A' %></td>
                                <td><%= entry.coins || 0 %></td>
                                <td><%= entry.pending_coin || 0 %></td> <!-- Display Pending Coins -->
                                <td><%= entry.title || 'No Title' %></td> <!-- Display Title -->
                                <td>
                                    <% if (entry.quest_screenshot) { %>
                                        <% JSON.parse(entry.quest_screenshot).forEach((screenshot, index) => { %>
                                            <button class="btn btn-info view-image" 
                                                data-image="/uploads/<%= screenshot %>" 
                                                title="View Screenshot <%= index + 1 %>">
                                                Screenshot <%= index + 1 %>
                                            </button>
                                        <% }) %>
                                    <% } else { %>
                                        <span class="text-muted">No screenshot uploaded</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (entry.status === 'completed') { %>
                                        <span class="badge badge-success">Completed</span>
                                    <% } else { %>
                                        <span class="badge badge-warning">Pending</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Viewing Images -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Screenshot Viewer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="Screenshot" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<script>
    // Modal logic for viewing screenshots
    document.querySelectorAll('.view-image').forEach(button => {
        button.addEventListener('click', function () {
            const imageUrl = this.getAttribute('data-image');
            document.getElementById('modalImage').setAttribute('src', imageUrl);
            $('#imageModal').modal('show');
        });
    });
</script>
