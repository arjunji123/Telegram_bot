<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">
                    <%= title %>
                </h4>

                <div class="row">
                    <div class="col-lg-12">
                        <form method="post" action="/admin/<%= module_slug %>/update/<%= user.id %>"
                            enctype="application/x-www-form-urlencoded">
                            <div class="row">
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">User Name</label>
                                        <input type="text" id="simpleinput" name="user_name" class="form-control"
                                            value="<%= user.user_name %>">
                                    </div>
                                </div>
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" id="email" name="email" class="form-control"
                                            value="<%= user.email %>">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <!-- <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="pendingCoins" class="form-label">Pending Coins</label>
                                        <input type="text" id="pendingCoins" name="pending_coins" class="form-control"
                                            value="<%= user.pending_coins %>">
                                    </div>
                                </div> -->
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="status" class="form-label">Status</label>
                                        <select class="form-control" name="status">
                                            <option value="1" <% if (user.status===1) { %> selected <% } %>
                                                    >Active</option>
                                            <option value="0" <% if (user.status===0) { %> selected <% } %>
                                                    >Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-4 float-left">
                                    <button class="btn btn-primary" type="submit">Update</button>
                                </div>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div>