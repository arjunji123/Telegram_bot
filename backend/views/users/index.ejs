<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive">
                <div class="row page_top_bar">
                    <div class="col-12">
                        <div class="col-6 heading float-left">
                            <h4 class="mt-0 header-title">Users</h4>
                        </div>
                        <div class="col-6 btns float-left text-right">
                            <a class="btn btn-primary" href="/admin/<%= module_slug %>/add">Add New</a>
                        </div>
                    </div>
                </div>

                <table id="responsive-datatable" class="table table-bordered table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Created</th>
                            <th>User Type</th>
                            <th>Status</th>
                            <th>Screenshot</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let serialNumber=1; %>
                            <% users[0].forEach(user=> { %>
                                <tr id="user-row-<%= user.id %>">
                                    <td>
                                        <%= serialNumber++ %>
                                    </td>
                                    <td>
                                        <%= user.user_name %>
                                    </td>
                                    <td>
                                        <%= user.mobile %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.date_created %>
                                    </td>
                                    <td>
                                        <%= user.user_type %>
                                    </td>
                                    <td>
                                        <%= user.status===1 ? 'Active' : 'Inactive' %>
                                    </td>
                                    <td>
                                        <% if (user.pay_image) { %>
                                            <button class="btn btn-info view-image"
                                                data-image="http://localhost:4000/uploads/<%= user.pay_image %>">View
                                                Screenshot</button>
                                            <% } else { %>
                                                No screenshot uploaded
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (user.user_type==='company' ) { %>
                                            <!-- View button to open the form modal -->
                                            <button class="btn btn-primary view-company-form"
                                                data-id="<%= user.id %>">View</button>
                                            <% } %>
                                                <form action="/admin/users/update-status" method="POST"
                                                    style="display:inline;">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <input type="hidden" name="status" value="1">
                                                    <button type="submit" class="btn btn-sm btn-success"
                                                        <%=user.status===1 ? 'disabled' : '' %>>Activate</button>
                                                </form>
                                                <form action="/admin/users/update-status" method="POST"
                                                    style="display:inline;">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <input type="hidden" name="status" value="0">
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                        <%=user.status===0 ? 'disabled' : '' %>>Deactivate</button>
                                                </form>
                                    </td>
                                </tr>
                                <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal for viewing company form -->
<div class="modal fade" id="companyFormModal" tabindex="-1" role="dialog" aria-labelledby="companyFormModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="companyFormModalLabel">Company Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- The form where admin can add a coin rate -->
                <form action="/coin-rate/add" method="POST">
                    <div>
                        <label for="company_id">Company ID</label>
                        <select name="company_id" required>
                            <option value="">Select a Company</option>
                            <% companies.forEach(function(company) { %>
                                <option value="<%= company.id %>">
                                    <%= company.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="coin_rate">Coin Rate</label>
                        <input type="text" class="form-control" name="coin_rate" required>
                    </div>
                    <div>
                        <label for="description">Description</label>
                        <textarea class="form-control" name="description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>





            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Show modal with the clicked image
        $('.view-image').click(function () {
            var imageUrl = $(this).data('image');
            $('#modalImage').attr('src', imageUrl);
            $('#imageModal').modal('show');
        });

        // Show modal with company form
        $('.view-company-form').click(function () {
            var userId = $(this).data('id');
            // Fetch and populate form data here if needed using AJAX
            $('#companyFormModal').modal('show');
        });
    });
</script>