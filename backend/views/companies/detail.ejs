<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Details - <%= user.user_name %>
                </h4>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="user_name" class="form-label">User Name</label>
                                    <input type="text" id="user_name" class="form-control" value="<%= user.user_name %>"
                                        readOnly>
                                </div>
                            </div>
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" class="form-control" value="<%= user.email %>"
                                        readOnly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="date_created" class="form-label">Date Created</label>
                                    <input type="text" id="date_created" class="form-control"
                                        value="<%= user.date_created %>" readOnly>
                                </div>
                            </div>
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="user_type" class="form-label">User Type</label>
                                    <input type="text" id="user_type" class="form-control" value="<%= user.user_type %>"
                                        readOnly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="status" class="form-label">Status</label>
                                    <input type="text" id="s" class="form-control"
                                        value="<%= parseInt(user.status) === 1 ? 'Active' : 'Inactive' %>" readOnly>
                                </div>
                            </div>


                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="mobile" class="form-label">Mobile</label>
                                    <input type="text" id="mobile" class="form-control" value="<%= user.mobile %>"
                                        readOnly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 float-left">
                                <div class="mb-3">
                                    <label for="coin_rate" class="form-label">Coin Rate</label>
                                    <input type="text" id="coin_rate" class="form-control" value="<%= user.coin_rate %>"
                                        readOnly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Desc</label>
                                        <textarea class="form-control" id="editor" readOnly
                                            name="description"><%= user.description %></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
