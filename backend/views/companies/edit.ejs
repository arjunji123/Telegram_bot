<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">
                    Edit - <%= user.user_name %>
                </h4>
                <div class="row">
                    <div class="col-lg-12">

                        <form method="POST" action="/admin/<%= module_slug %>/update/<%= userId %>">
                            <!-- User Fields -->
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="user_name" class="form-label">User Name</label>
                                        <input type="text" name="user_name" class="form-control"
                                            value="<%= user.user_name %>" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" value="<%= user.email %>"
                                            required>
                                    </div>
                                </div>
                            </div>

                            <!-- Company Fields -->
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="coin_rate" class="form-label">Coin Rate</label>
                                        <input type="text" name="coin_rate" class="form-control"
                                            value="<%= companyData.coin_rate %>" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 float-left">
                                        <div class="mb-3">
                                            <label for="simpleinput" class="form-label">Desc</label>
                                            <textarea class="form-control" id="editor"
                                                name="description"><%= companyData.description %></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Status Field -->
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select name="status" class="form-control" id="s" required>
                                    <option value="1" <%=parseInt(user.status)===1 ? "selected" : "" %>>Active</option>
                                    <option value="0" <%=parseInt(user.status)===0 ? "selected" : "" %>>Inactive
                                    </option>
                                </select>
                            </div>

                            <!-- Submit Button -->
                            <div class="row">
                                <div class="col-lg-4 float-left">
                                    <button class="btn btn-primary" type="submit">Update</button>
                                </div>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div>
